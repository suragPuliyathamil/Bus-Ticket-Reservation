<%- include('partials/header'); -%>
<link rel="stylesheet" type="text/css" href="/stylesheets/profile.css">
 <div class="container">
    <div class="row">                
                <form class="col-sm-6 col-md-6 col-lg-6" action="/profile?_method=PUT" method="POST">                            	
                        <h3>Account Information</h3>
                        
                       	    <ul class="list-unstyled">
                                <li>
                                    <div class="form-group">
                                        <label for="fname">First Name <span class="required">*</span></label>
                                        <input type="text" name="user[firstname]" id="fname" class="form-control" value="<%=currentUser.firstname%>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="lname">Last Name <span class="required">*</span></label>
                                        <input type="text" name="user[lastname]" id="lname" class="form-control" value="<%=currentUser.lastname%>" required>
                                    </div>
                                </li>
                                <li>
                                    <div class="form-group">
                                        <label for="emailAddress">Email Address <span class="required">*</span></label>
                                        <input type="email" name="user[email]" id="emailAddress" class="form-control" value="<%=currentUser.email%>" required>
                                    </div>
                                </li>
                                <li>
                                    <div class="form-group">
                                        <label for="phoneno">Phone Number <span class="required">*</span></label>
                                        <input type="number" name="user[phoneno]" id="phoneno" class="form-control" value="<%=currentUser.phoneno%>" required>
                                    </div>
                                </li>
                                <div class="form-group">
                                    <button class="btn btn-lg btn-success">Save</button>
                                    <span class="float-right"><b>*</b> Required Field</span>
                                </div>
                            </ul>                         
            </form>                               
    </div>
</div>


<%- include('partials/footer'); -%>