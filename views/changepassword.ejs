<%- include('partials/header'); -%>
<link rel="stylesheet" type="text/css" href="/stylesheets/profile.css">
 <div class="container">
    <div class="row">                
                <form class="col-sm-6 col-md-6 col-lg-6" action="/changepassword?_method=PUT" method="POST"> 
                    <h3>Change Password</h3>
                        <ul class="list-unstyled">
                                <li>
                                    <div class="form-group">
                                        <label for="cpassword">Current Password <span class="required">*</span></label>
                                        <input type="password" name="cpassword" id="cpassword" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label for="npassword">New Password <span class="required">*</span></label>
                                        <input type="password" name="npassword" id="npassword" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-lg btn-success">Save</button>
                                        <span class="float-right"><b>*</b> Required Field</span>
                                    </div>
                                </li>
                        </ul>
               </form>                               
    </div>
</div>


<%- include('partials/footer'); -%>